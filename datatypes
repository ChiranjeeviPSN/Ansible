- name: devops course information
  hosts: local
  connection: local
  vars:
    course: "Devops with AWS" # string
    duration: 120 # number
    topics:  # list
    - Linux
    - shell
    - Ansible
    - Terraform
    - AWS
    - K8S
    live: true  # boolean
    tools: # map/directory
      ci: jenkins  # string
      cm: Ansible
      cloud: AWS
      aws:
      - EC2
      - IAM
  tasks:
  - name: print course information
    ansible.builtin.debug
      msg: "Iam learning {{course}} with duration {{duration}}, topics are {{topics}} and live: {{live}} and the tools are {{tools}}"